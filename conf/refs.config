/*
 * ------------------------------------------------
 *  Nextflow references config file for DNA_and_RNA
 * ------------------------------------------------
 * Imported under the default 'standard' Nextflow
 * profile in: nextflow.config
 */

process {

  executor = 'pbs'

  withName:downloads {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:vepdb_pr {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:dictionary_pr {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:bwa_index {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:exomebed_pr {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:vcf_pr {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:indexfeaturefile_pr {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:star_index {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:reflat_pr {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:rrna_pr {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:gatk4snv_pr {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
  withName:gtfsaf_pr {
    cpus = 8
    memory = 24.GB
    time = 36.h
  }
}

//conda.cacheDir = '/data/genome/bmoran/conda/nextflow'

singularity {

  cacheDir = '/data/genome/bmoran/singularity/nextflow'
  runOptions = '--bind /data/genome/bmoran:/data/genome/bmoran'

}
params.ftpbase = "ftp://ftp.ensembl.org/pub/release-100"
params {

  outDir = null
  exomeBed = false

  //UMD3.1 references used; uncomment/add urls and rename for other organisms
  //fa = "/fasta/bos_taurus/dna/Bos_taurus.UMD3.1.dna.toplevel.fa.gz"
  //gtf = "/gtf/bos_taurus/Bos_taurus.UMD3.1.94.gtf.gz"
  //cdna = "/release-94/fasta/bos_taurus/cdna/Bos_taurus.UMD3.1.cdna.all.fa.gz"
  //vcf = "/variation/vcf/bos_taurus/bos_taurus_incl_consequences.vcf.gz"

  // human38fa = params.ftpbase"/fasta/homo_sapiens/dna/Homo_sapiens.GRCh38.dna.primary_assembly.fa.gz"
  //  human38gtf = params.ftpbase"/gtf/homo_sapiens/Homo_sapiens.GRCh38."params.release".gtf.gz"
  //  human38cdna = params.ftpbase"/fasta/homo_sapiens/cdna/Homo_sapiens.GRCh38.cdna.all.fa.gz"
  //  human38vcf = "ftp://ftp.ncbi.nih.gov/snp/organisms/human_9606_b151_GRCh38p7/VCF/All_20180418.vcf.gz"

  fa = "/fasta/rattus_norvegicus/dna/Rattus_norvegicus.Rnor_6.0.dna.toplevel.fa.gz"
  gtf = "/gtf/rattus_norvegicus/Rattus_norvegicus.Rnor_6.0"
  cdna = "/fasta/rattus_norvegicus/cdna/Rattus_norvegicus.Rnor_6.0.cdna.all.fa.gz"
  vcf = "/variation/vcf/rattus_norvegicus/rattus_norvegicus.vcf.gz"

  //below must match vep_install params
  vepgenome = "Rnor_6.0"
  vepspecies = "rattus_norvegicus"
  vepversion = "100"

  //STAR splice-junction database overhang size (should be number of bp in read data)
  sjdb = "100"

}
